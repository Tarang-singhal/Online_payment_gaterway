<%- include('partials/header.ejs')-%>
    <div class="container">

        <div class="row justify-content-md-center gap">
            <div class="col-md-6">

                <form action=<%="/paywithpaytm/" +currentInvoice._id %> method="GET">
                    <h2>Payment</h2>
                    <div class="form-group">
                        <label for="amount">Amount</label>
                        <input type="number" name="amount" required class="form-control" id="amount" placeholder="amount" min="<%=Math.floor(0.1*currentInvoice.invoice_amount)%>" max="<%=currentInvoice.invoice_amount%>">
                    </div>
                    <button type="submit" class="btn btn-primary">Pay</button>
                </form>
            </div>
        </div>
    </div>
    <%- include('partials/footer.ejs')-%>