<%- include('partials/header.ejs')-%>
<div class="container">

    <div class="row justify-content-md-center gap">
        <div class="col-md-6">
            <form action="/paywithpaytm" method="GET">
                <h2>Payment</h2>
                <div class="form-group">
                    <label for="amount">Amount</label>
                    <input type="number" name="amount" required class="form-control" id="amount" placeholder="amount" min="<%=Math.floor(0.1*currentUser.total_outstanding)%>" max="<%=currentUser.total_outstanding%>">
                </div>
                <button type="submit" class="btn btn-primary">Pay</button>
            </form>
        </div>
    </div>
</div>
