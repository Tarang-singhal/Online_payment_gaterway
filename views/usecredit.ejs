<%- include('partials/header.ejs')-%>
    <div class="row justify-content-md-center gap">
        <div class="col-md-6">
            <form action="/home/dashboard/payment/usecredit" method="POST">
                <h2>Available Credit:
                    <%=currentUser.credit%>
                </h2>

                <div class="form-group">
                    <label for="amount"></label>
                    <input type="number" name="amount" class="form-control" id="amount" placeholder="enter credit" min="<%=0.1*currentUser.credit%>" max="<%=currentUser.credit%>">
                </div>
                <button type="submit" class="btn btn-primary btn-block">Pay</button>
            </form>
        </div>
    </div>
    <%- include('partials/footer.ejs')-%>